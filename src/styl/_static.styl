@import "virtual/_variable.styl"

.page-header
  height: 60px
  background: #0084c3
  border-bottom: 1px solid #43b4eb
  background-image: linear-gradient(to top, rgba(9, 94, 110, .09) 0, rgba(48, 144, 166, .04) 10%, rgba(48, 144, 166, 0) 18%, rgba(48, 144, 166, 0) 100%)
  font-weight: 600
  color: #fff
  box-shadow: inset 0 -2px 5px rgba(0, 0, 0, .2)
  .content
    display flex
    justify-content space-between
    align-items center
    height: 60px

.logo__link
  padding-bottom: 14px

.top-logo
  +respond-to($xsmall)
    display: none

.mob-logo
  display: none

  +respond-to($xsmall)
    display: block
    width: 35px
    height: 38px

.top-menu__wrap
  margin-top: 4px

.top-menu__link
  font-size: 13px
  line-height: 14px

  font-weight 300
  color: #FFFFFF
  letter-spacing: 0
  text-transform uppercase
  margin: 0 25px
  display: inline-block
  cursor: pointer
  &:after
    content: ''
    display: block
    margin: 3px auto 0;
    height: 2px
    width: 0px
    background: #feeb7e
    transition: width .2s ease
  &:hover, &.active
    &:after
      width: 100%

  +respond-to($small)
    margin: 0 10px

.button
  margin-left: 10px
  color: #fff
  display: inline-block
  height: 30px
  border-radius: 2px
  padding: 0 20px
  background: #017bb5
  overflow: hidden
  font-size: 11px
  line-height: 30px
  font-weight 600
  text-transform: uppercase
  text-align: center
  vertical-align: top
  position: relative
  -webkit-transition: background-color .2s, color .2s
  transition: background-color .2s, color .2s
  cursor: pointer

.button-main
  border: 1px solid #fff
  &:hover
    background: #fff
    color: #006493

.button-register
  border: 1px solid #00d34d
  background-color: #00d34d
  padding: 0 19px 0 16px
  i
    padding-right: 5px
  &:hover
    background-color #fff
    color: #00d34d
    border-color #fff
    i:before
      background-image: url(images/svg/icon-user_color.svg)

.featured-cards
  display: flex
  flex-direction: row
  background: #ffffff
  padding: 32px
  margin-bottom: 32px
  box-shadow: 0 9px 20px 0 rgba(13,93,131,0.10)
  border-radius: 5px

.featured-cards__img-container
  width: 309px
  margin-right: 32px

.featured-cards__content
  width: calc(100% - 333px)

.featured-cards__content
  flex-grow: 1

.featured-cards__header-promo
  font-size: 10px
  line-height: 16px
  font-weight: 700
  color: #a1b9c2
  text-transform: uppercase
  margin-bottom: 8px

.featured-cards__header-title
  font-size: 22px
  line-height: 32px
  font-weight: 600
  color: #3d3126
  margin-bottom: 24px

.featured-cards__links-list-item
  position: relative
  padding-left: 24px
  &:before
    content: ''
    position: absolute
    left: 0
    top: 4px
    width: 24px
    height: 24px
    background: url(images/svg/check-mark.svg) center no-repeat

.featured-cards__links
  display: flex
  flex-direction: row
  justify-content: space-between

.featured-cards__links-list
  display: flex
  width: 50%
  flex-wrap: wrap
  flex-direction: column
  align-content: space-between

.featured-cards__links-list-link
  font-size: 14px
  line-height: 32px
  font-weight: 300
  color: #008fd6
  border-bottom: 1px solid #a7d8f1
  &:hover
    border-bottom: none

.page-footer
  border-top 1px solid rgba(251, 247, 255, .5)
  .content
    display flex
    justify-content space-between
    align-items center
    height: 62px

.footer-text
  font-size: 11px
  color: #BBE6FB
  letter-spacing: 0
  font-weight 500
  $ultraThin()

.footer-menu__link
  font-weight 500
  font-size: 13px
  color: #BBE6FB
  letter-spacing: 0
  text-transform capitalize
  margin: 0 15px
  cursor: pointer

.footer-soc__link
  margin: 0 15px
  &:last-child
    margin-right: 0

@media (max-width: 1439px)
  .featured-cards__img-container
    width: 263px

  .featured-cards__content
    width: calc(100% - 287px)

@media (max-width: 1019px)
  .featured-cards__img-container
    width: 309px

  .featured-cards__content
    width: calc(100% - 333px)

  .page-footer
    .content
      flex-wrap wrap

  .footer-menu__wrap
    order 1
    width: 100%

  .footer-soc__wrap
    order: 3

  .footer-text
    order 2

  .footer-menu__link:first-child
    margin-left: 0

  .featured-cards
    align-items: center

  .featured-cards__links
    flex-direction: column

  .featured-cards__links-list
    width: 100%

@media (max-width: 779px)
  .featured-cards__img-container
    width: 259px

@media (max-width: 959px)
  .page-header
    padding-top: 13px
    height: auto
    min-height: 60px
    box-sizing: border-box
    .content
      height: auto
      align-items: flex-start

  .top-menu__wrap
    text-align center
    padding-bottom: 12px
    display: flex
    flex-direction: column
    box-sizing: border-box
    height: 25px
    overflow: hidden
    &.open
      height: auto
      .active
        &:after
          transform rotate(180deg)

  .top-menu__link
    padding: 4px 5px
    font-size 18px
    font-weight: 300
    text-shadow: 1px -1px 0px rgba(0, 0, 0, 0.2)
    text-transform capitalize
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    font-smoothing: grayscale
    &:after
      background none

    &.active
      order -1
      padding-bottom: 10px
      &:after
        content: ''
        display: inline-block
        color: #fff
        width: 8px
        height: 5px
        background-image: url(images/svg/icon-mob_menu.svg)
        background-size: 100% auto
        margin: 0 -20px 2px 7px
        background-repeat: no-repeat
        margin-left: 12px

@media (max-width: 779px)
  .page-header
    padding-top: 9px
    .button-main
      display: none

  .button-register
    padding: 0 7px 0 10px
    margin-top: 4px
    height: 28px

  .top-menu__wrap
    .top-menu__link
      display: none
      font-size 16px
      &.active
        font-size 18px
        display: block
        position: absolute
        top: 7px
        left: 27px
    &.open
      padding-top: 35px
      margin-right: -67px
      .top-menu__link
        display: block

  .featured-cards
    flex-direction: column
    align-items: center
    padding: 24px

  .featured-cards__img-container
    margin-right: 0
    margin-bottom: 24px

  .featured-cards__content
    width: 100%

  .page-footer
    padding-top: 10px
    padding-bottom: 15px

  .footer-soc__wrap
    padding-top: 7px
    padding-bottom: 7px

  .footer-text
    font-size 10px

  .footer-menu__link
    margin: 4px 12px

  .footer-menu__wrap
    text-align: center
    display: flex
    flex-wrap: wrap
    align-items: center
    justify-content: center

  .footer-text
    order 3

  .footer-soc__wrap
    order 2

  .page-footer .content
    height: auto
    justify-content center

  .footer-soc__wrap
    width: 100%
    text-align center
