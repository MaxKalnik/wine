.btn-container--show-full
  display: flex
  position: relative
  justify-content: center
  margin-top: 24px
  &:before
    height: 80px
    width: 100%
    position: absolute
    top: -80px
    display: block
    background-image: linear-gradient(-180deg,rgba(255,255,255,.4) 0,#fff 100%);
    content: ''

.btn-go-back
  display: inline-block
  position: relative
  border-radius: 5px
  padding: 12px 24px
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  cursor: pointer
  transition: .25s ease-out
  border: 1px solid alpha($color-purple, 0.3)
  background: $color-white
  transition: .25s ease-out
  #btn_icon
    fill: $color-purple
    transition: .25s ease-out

  &:hover
    background: $color-purple
    color: $color-white
    border: 1px solid $color-white
    #btn_icon
      fill: $color-white
    .btn-go-back-text
      border-bottom: 1px solid transparent
      color: $color-white

.btn-go-back-text
  border-bottom: 1px solid alpha($color-purple, 0.3)
  transition: .25s ease-out
  color: $color-purple

.mobile-only
  display: none
