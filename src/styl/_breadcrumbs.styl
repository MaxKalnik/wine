.breadcrumbs__wrap
  display: flex
  width: auto
  background-color: rgba(255, 255, 255, .9)
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.10)
  border-radius: 2px
  padding: 0 14px

  +respond-to($xsmall)
    white-space: nowrap
    max-width: 100%
    box-sizing border-box

.breadcrumbs__item
  font-size: 12px
  letter-spacing: 0
  line-height: 42px
  color: #667780

  &:first-child
    &:before
      display: none

  &:last-child
    +respond-to($xsmall)
      overflow: hidden
      text-overflow: ellipsis

  &:before
    content: ''
    display: inline-block
    color: #fff
    width: 6px
    height: 13px
    background-image: url(images/svg/arrow.svg)
    background-position: 0px 5px
    background-size: 100% auto
    margin: 0 6px 0 8px
    background-repeat no-repeat

.breadcrumbs__link
  color: $main-color
  letter-spacing: 0
  line-height: 42px
  text-decoration underline
  text-decoration-color: #A3DCF0
  $ultraThin()
  &:hover
    text-decoration none

.section--table
  .breadcrumbs__wrap
    width: auto
    margin-bottom: 45px
    box-shadow: none

  .breadcrumbs__link
    color: $main-color
    letter-spacing: 0
    line-height: 42px
    text-decoration: underline
    $ultraThin()
    &:hover
      text-decoration none
      text-decoration-color: #A3DCF0

  .breadcrumbs__item
    &:nth-child(3),
    &:nth-child(4),
    &:last-child
      overflow: hidden
      text-overflow: ellipsis

    &:nth-child(3),
    &:nth-child(4)
      min-width: 45px

    &:last-child
      min-width: 75px
